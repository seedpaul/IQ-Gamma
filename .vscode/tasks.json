{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve-8080",
      "type": "process",
      "command": "py",
      "args": [
        "-m",
        "http.server",
        "8080"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": ".*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Serving HTTP",
          "endsPattern": "Serving HTTP"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
        "focus": false,
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
